<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/tap_img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_home_top_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        />

    <EditText

        android:id="@+id/reg_phone_num"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tap_img2"
        android:hint="手机号"
        tools:ignore="MissingConstraints"
        />

    <EditText

        android:id="@+id/reg_verified"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/reg_phone_num"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:hint="请输入验证码"
        tools:ignore="MissingConstraints"


        />
    <TextView
        android:id="@+id/reg_send_verfied_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_verification"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/reg_verified"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />


    <Button
        android:id="@+id/reg_but"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="@string/app_name_next"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_verified"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/verified_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_verification_login"
        app:layout_constraintTop_toBottomOf="@id/reg_but"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_pass"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reg_but"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
