<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText

        android:id="@+id/cell_phone_num"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:hint="请输入手机号"
        tools:ignore="MissingConstraints"
        />

    <EditText

        android:id="@+id/import_verified"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cell_phone_num"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:hint="请输入验证码"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/verified_get"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:text="获取验证码"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_verified"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/next_but"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="下一步"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_verified"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>